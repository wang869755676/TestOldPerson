<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:orientation="vertical"
        android:singleLine="true"
        android:text="走马灯走马灯走马灯走马灯走马灯">

    </TextView>

    <TextSwitcher
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inAnimation="@anim/in_right"
        android:outAnimation="@anim/out_left"
        android:visibility="gone"></TextSwitcher>

    <ViewFlipper
        android:id="@+id/flippr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"></ViewFlipper>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"></View>

</LinearLayout>
